@model WebApplication.ViewModels.RoleViewModel
@{
    ViewData["Title"] = "Roles";
}


<div class="container text-center w-50">
    <h2>
        <label asp-for="Roles"></label>
    </h2>

    <p>
        <div class="container text-left">
            <a asp-action="Users" class="btn btn-primary">User list</a>
        </div>
    </p>

    <table class="table table-hover table-sm">
        <thead class="thead-dark text-center">
            <tr>
                <th class="w-50"><label asp-for="RoleName"></label></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var entity in Model.Roles)
            {
                <tr>
                    <td>@entity.Name</td>
                </tr>
            }
        </tbody>
    </table>
</div>
